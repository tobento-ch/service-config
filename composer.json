{
    "name": "tobento/service-config",
    "type": "library",
    "description": "Loading and managing configuration data for PHP applications.",
    "keywords": [
        "tobento",
        "package",
        "configuration",
        "settings"
	],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "tobento/service-collection": "^1.0",
        "tobento/service-filesystem": "^1.0.5",
        "tobento/service-dir": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Tobento\\Service\\Config\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\Service\\Config\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}